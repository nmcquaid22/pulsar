                    }}

                    {{
                        form.date({
                            'label': 'Add occurence',
                            'class': 'form__group--large u-margin-top hide js-set-occurence',
                            'prepend': html.icon('calendar'),
                            'id': 'new-occurence',
                            'name': 'new-occurence',
                            'append': html.button({
                                'label': 'Add',
                                'class': 'btn--primary'
                            }),
                            'append_type': 'button'
                        })
                    }}

                    {{ 
                        html.datatable({
                            'data-order': '[[ 1, "asc" ]]',
