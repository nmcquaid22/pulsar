                    }}
                </div>
                <div class="modal__footer">
                    {{
                        form.end({
                            'actions': [
                                form.submit({
                                    'class': 'btn--primary',
                                    'label': 'Done',
                                    'data-dismiss': 'modal'
                                }),
                                html.button({
                                    'class': 'btn--naked',
